<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibary_2_0.xsd"
	version="2.0">

	<namespace>http://node-faces.com</namespace>
	
	<!-- Tag Handlers -->
	<tag>
		<tag-name>default</tag-name>
		<handler-class>com.node.faces.taghandler.DefaultValueHandler</handler-class>
		<attribute>
			<name>var</name>
			<required>true</required>
		</attribute>
		<attribute>
			<name>value</name>
			<required>true</required>
		</attribute>
	</tag>
	
	<tag>
	
		<description>
		<![CDATA[
			<p>Close Dialog </p>
		]]>
		</description>
		<tag-name>closeDialog</tag-name>
		<handler-class>com.node.faces.taghandler.CloseDialogHandler</handler-class>
		
		<attribute>
			<name>considerFacesValidation</name>
			<type>java.lang.Boolean</type>
		</attribute>
		
		<attribute>
			<name>condition</name>
			<type>java.lang.String</type>
		</attribute>
		
		<attribute>
			<description>
			<![CDATA[
				<p>Enables/Disables Close dialog functionality ( default <b>true</b> ) </p>
			]]>
			</description>
			<name>enabled</name>
			<type>java.lang.Boolean</type>
		</attribute>
		
	</tag>
	
	
	<tag>
		<tag-name>update</tag-name>
		<handler-class>com.node.faces.taghandler.UpdateHandler</handler-class>
			
		<attribute>
			<description>
			<![CDATA[
				<p>update list for successfull request.</p>
			]]>
			</description>
			<name>onSuccess</name>
			<type>java.lang.String</type>
		</attribute>
		
		<attribute>
			<description>
			<![CDATA[
				<p>update list for failed request.</p>
			]]>
			</description>
			<name>onFailure</name>
			<type>java.lang.String</type>
		</attribute>

		<attribute>
			<description>
			<![CDATA[
				<p>update parent form belongs to on successful request. ( default is <b>true</b> ) </p>
			]]>
			</description>
			<name>updateFormOnSuccess</name>
			<type>java.lang.Boolean</type>
		</attribute>
		
		
		
	</tag>
	
	<!-- Facelets -->
	<tag>
		<tag-name>custom</tag-name>
		<source>resources/node/facelets/custom.xhtml</source>
	</tag>

	<tag>
		<tag-name>composition</tag-name>
		<source>resources/node/facelets/composition.xhtml</source>
	</tag>

	<tag>
		<tag-name>form</tag-name>
		
		<source>resources/node/facelets/form.xhtml</source>
		
		<attribute>
			<name>id</name>
			<required>true</required>
			<type>java.lang.String</type>
		</attribute>

		<attribute>
			<description> 
				<![CDATA[
					<p>Save button action ( <b> required </b> ) </p>
				]]>
			</description>
			<name>saveAction</name>
			<required>true</required>
		</attribute>
		
		<attribute>
			<description> 
				<![CDATA[
					<p>Cancel button outcome ( <b> default : 'cancel' </b> ) </p>
				]]>
			</description>
			<name>cancelOutcome</name>
			<type>java.lang.String</type>
		</attribute>

		<attribute>
			<name>rendered</name>
			<type>java.lang.Boolean</type>
		</attribute>

		<attribute>
			<name>contentStyleClass</name>
			<type>java.lang.String</type>
		</attribute>

		<attribute>
			<description> 
				<![CDATA[
					<p>Set this attribute true in case of using this form in a p:dialog component ( <b> default : 'false' </b> ) </p>
				]]>
			</description>
			<name>dialog</name>
			<type>java.lang.Boolean</type>
		</attribute>
		
	
	</tag>
	
	
	
